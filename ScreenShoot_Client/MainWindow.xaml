<Window x:Class="ScreenShoot_Client.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ScreenShoot_Client"
        mc:Ignorable="d"
        Title="ScreenShoot" Height="850" Width="1300" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="8*"></RowDefinition>
            <RowDefinition Height="0.7*"></RowDefinition>
        </Grid.RowDefinitions>
        <Image Name="screenimage" Stretch="UniformToFill"  ></Image>
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" >
            <Button Margin="5" Background="AliceBlue"  Content="Save" FontSize="25" Width="200" HorizontalAlignment="Right" Click="Save_Click"></Button>
            <Button  Margin="5" Background="AliceBlue" Content="ScreenShoot" FontSize="25" Width="200" HorizontalAlignment="Right" Click="Button_Click"></Button>
        </StackPanel>
    </Grid>
</Window>
